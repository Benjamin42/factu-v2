{% extends "layout.html.twig" %}

{% block body %}

  <p>
    {% for message in app.session.flashbag.get('notice') %}
      <div class="alert alert-success" role="alert">{{ message }}</div>
    {% endfor %}
  </p>

	<div class="well">

    <h4>Produit <a href="#"><span class="badge" data-toggle="modal" data-target="#helpModal" >?</span></a></h4>

    <!-- Modal -->
    <div class="modal fade" id="helpModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Aide</h4>
          </div>
          <div class="modal-body">

            <p>Le prix en vert correspond au prix qui sera appliqué pour toutes commandes avec une date de facturation à la date du jour.
            </p>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
          </div>
        </div>
      </div>
    </div>

    <hr>

    <div class="row">
      <div class="col-md-6">

        <p>
          <b>Libellé : </b>{{ product.title }}
        <p>
        <p>
          <b>Catégorie : </b>{{ product.category ? product.category.title : "" }}
        <p>
        <p>
          <b>Commentaire : </b>{{ product.comment }}
        <p>
        <p>
          <b>Colonne CSV : </b>{{ product.idColCsv }}
        <p>
        <p>
          <b>Actif : </b>
          {% if product.active %}
            <span class="label label-success">Actif</span>
          {% else %}
            <span class="label label-danger">Inactif</span>
          {% endif %}
        <p>
        <p>
          <b>Suivi Stats : </b>
          {% if product.isFollowedStat %}
            <span class="label label-success">Suivi</span>
          {% else %}
            <span class="label label-danger">Non Suivi</span>
          {% endif %}
        <p>

      </div>

      <div class="col-md-6">


          {% if listPrices == null %}
            Pas de prix pour ce produit !
          {% else %}
            <div role="tabpanel">

              <!-- Nav tabs -->
              <ul class="nav nav-tabs" role="tablist">
                <li role="tableau" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab"><div class="glyphicon glyphicon-th-list"></div>&nbsp;Tableau</a></li>
                <li role="graph"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab"><div class="glyphicon glyphicon-stats"></div>&nbsp;Graphique</a></li>
              </ul>

              <!-- Tab panes -->
              <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="home">

                  </br>
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Prix Unitaire</th>
                        <th>Prix Unitaire Livraison</th>
                        <th>Date</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% set priceDay = product.getPriceDay %}
                      {% for price in listPrices %}
                        <tr class="{{ priceDay.id == price.id ? 'success' : '' }}">
                          <td>{{ price.unitPrice }} &euro;</td>
                          <td>{{ price.unitPriceLiv }} &euro;</td>
                          <td>{{ price.creaDate | date('d/m/Y') }}</td>
                        </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                  


                </div>

                <div role="tabpanel" class="tab-pane" id="profile">
                  
                  <div id="chartdiv" style="width: 100%; height: 500px;"></div>

                </div>
              </div>

            </div>
          {% endif %}


      </div>
	</div>



  <p>
    <a href="{{ path('product_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>

    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier le produit
    </a>
    <a href="{{ path('product_delete', {'id': product.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer le produit
    </a>
  </p>




<script>
  var chart = null;

  $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
    chart.invalidateSize();
  })

  $(document).ready(function(){
    chart = AmCharts.makeChart("chartdiv", {
          "type": "serial",
          "theme": "none",
          "pathToImages": "http://www.amcharts.com/lib/3/images/",
          "legend": {
            "useGraphSettings": true,
            "position":"bottom",
            "valueText":"[[value]]€"
        },
          "dataDateFormat": "DD/MM/YYYY",
          "valueAxes": [{
              "id":"v1",
              "axisAlpha": 0,
              "position": "left"
          }],
          "graphs": [{
            "id": "g1",
            "bullet": "round",
            "bulletBorderAlpha": 1,
            "bulletColor": "#FFFFFF",
            "bulletSize": 5,
            "balloonText": "[[value]]&euro;",
            "hideBulletsCount": 50,
            "lineThickness": 2,
            "title": "Prix Unitaire",
            "useLineColorForBulletBorder": true,
            "valueField": "1",
            "type": "smoothedLine"
          },{
            "id": "g2",
            "bullet": "round",
            "bulletBorderAlpha": 1,
            "bulletColor": "#FFFFFF",
            "bulletSize": 5,
            "balloonText": "[[value]]&euro;",
            "hideBulletsCount": 50,
            "lineThickness": 2,
            "title": "Prix Unitaire Livraison",
            "useLineColorForBulletBorder": true,
            "valueField": "2",
            "type": "smoothedLine"
          }],
          "chartScrollbar": {
        "graph": "g1",
        "scrollbarHeight": 30
      },
          "chartCursor": {
              "cursorPosition": "mouse",
              "pan": true,
               "valueLineEnabled":true,
               "valueLineBalloonEnabled":true
          },
          "categoryField": "date",
          "categoryAxis": {
              "parseDates": true,
              "dashLength": 1,
              "minorGridEnabled": true,
              "position": "top"
          },
          "dataProvider": [
        {% for price in listPricesInvert %}
          {
            "date": "{{ price.creaDate | date('d/m/Y') }}",
            "1": "{{ price.unitPrice }}",
            "2": "{{ price.unitPriceLiv }}"
          },
        {% endfor %}
          ]
    });

    chart.addListener("rendered", zoomChart);

    zoomChart();
    function zoomChart(){
        chart.zoomToIndexes(chart.dataProvider.length - 40, chart.dataProvider.length - 1);
    }
  });
</script>

{% endblock %}