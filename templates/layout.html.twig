                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><div class="glyphicon glyphicon-user"></div>&nbsp;{{ app.user ? app.user.formatedLabel : '' }} <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">

                        <li><a href="{{ path('user_edit_profil') }}">Modifier mon compte</a></li>
                        <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
